doctype html
html
  head
    title MTTN 
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='/js/main.js') 
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.static-top
      .container
        a.navbar-brand(color='#FFFAFA',href='https://www.manipalthetalk.org/') MTTN
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            if user && user.isAdmin
              li.nav-item
                a.nav-link(href='/') See messages
                span.sr-only (current)
            if user      
              li.nav-item
                a.nav-link(href='/messages/send') Send Messages
              li.nav-item
                a.nav-link(href='/users/logout') Logout  
            else    
              li.nav-item
                a.nav-link(href='/users/login') Login 
              li.nav-item
                a.nav-link(href='/users/register') Register
    .container
      if !user
       != messages('message',locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p MTTN &copy; 2018
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    
